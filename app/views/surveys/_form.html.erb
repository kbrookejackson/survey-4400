    <%= form.label :autolyse, "No", :value => "false" %>
    <%= form.radio_button :autolyse, 'No', :checked => true %>  
  </div>

  <div class="form-group">
    <%= form.select :desired_attribute, ['No OS','Mac OSX', 'Windows 10', 'Windows 7 or below', 'Linux']%>
